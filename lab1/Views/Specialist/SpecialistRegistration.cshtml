@model lab1.Models.Specialist.SpecialistRegistrationModel
 
<h2>Регистрация</h2>
 
<form asp-action="SpecialistRegistration" asp-controller="Specialist" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <h>Компания</h>
        <div class="input-group mb-3">
            <select class="custom-select" id="inputGroupSelect01" asp-for="@Model!.CompanyId">
                @foreach (var company in Model.Companies)
                {
                    <option value="@company.Id"> БИК: @company.BankId, Название: @company.LegalName</option>
                }
            </select>
        </div>
        <div>
            <input type="submit" value="Подтвердить"/>
        </div>
    </div>
</form>

@section scripts{
 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}