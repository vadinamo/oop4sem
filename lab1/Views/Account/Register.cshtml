@model lab1.Models.Account.RegisterModel
 
<h2>Регистрация</h2>
 
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="input-group mb-3">
            <select class="custom-select" id="inputGroupSelect01" asp-for="@Model!.RoleId">
                @foreach (var role in Model.Roles)
                {
                    if (role.Id != 0)
                    {
                        <option value="@role.Id">@role.Name</option>
                    }
                }
            </select>
        </div>
        <div>
            <label asp-for="Surname">Введите фамилию</label><br/>
            <input type="text" asp-for="Surname"/>
            <span asp-validation-for="Surname"/>
        </div>
        <div>
            <label asp-for="FirstName">Введите имя</label><br/>
            <input type="text" asp-for="FirstName"/>
            <span asp-validation-for="FirstName"/>
        </div>
        <div>
            <label asp-for="Patronymic">Введите отчество</label><br/>
            <input type="text" asp-for="Patronymic"/>
            <span asp-validation-for="Patronymic"/>
        </div>
        <div>
            <label asp-for="PhoneNumber">Введите номер телефона</label><br/>
            <input type="text" asp-for="PhoneNumber"/>
            <span asp-validation-for="PhoneNumber"/>
        </div>
        <div>
            <label asp-for="Email">Введите Email</label><br/>
            <input type="text" asp-for="Email"/>
            <span asp-validation-for="Email"/>
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br/>
            <input asp-for="Password"/>
            <span asp-validation-for="Password"/>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторите пароль</label><br/>
            <input asp-for="ConfirmPassword"/>
            <span asp-validation-for="ConfirmPassword"/>
        </div>
        <div>
            <input type="submit" value="Регистрация"/>
        </div>
    </div>
</form>

@section scripts{
 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}