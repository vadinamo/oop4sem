@model lab1.Models.Client.NewInstallmentPlanModel
 
<h2>Получение рассрочки</h2>
 
<form asp-action="NewInstallmentPlan" asp-controller="Client" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="input-group mb-3">
            <select class="custom-select" id="inputGroupSelect01" asp-for="@Model!.AccountId">
                @foreach (var acc in Model.BankAccounts)
                {
                    <option value="@acc.Id">@acc.Bank?.LegalName, @acc.Name : @acc.Money</option>
                }
            </select>
        </div>
        <div>
            <label asp-for="Money">Введите сумму рассрочки</label><br/>
            <input type="text" asp-for="Money"/>
            <span asp-validation-for="Money"/>
        </div>
        <div>
            <label asp-for="Months">Количество месяцев</label><br/>
            <input type="text" asp-for="Months"/>
            <span asp-validation-for="Months"/>
        </div>
        
        <div>
            <input type="submit" value="Подтвердить"/>
        </div>
    </div>
</form>